<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.content %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>

<%# Here is the new ajax link that updates the div below, but no wysihat... %>

	<td><%= link_to_remote "AjaxEdit", 
	:url => {:controller => :pages, 
:action => :ajax_edit_content, 
:id => page.id}, 
:update => 'ajax_content'%></td>
																							
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>

<br>
<div id="ajax_content">no content - click AjaxEdit</div>
